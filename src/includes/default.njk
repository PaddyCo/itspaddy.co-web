<!DOCTYPE html>
<html lang="{{ site.lang }}">
  <head>
    <meta charset="utf-8">
    <title>{% if title %}{{ title }} Â· {{ site.title }}{% else %}{{ site.title or site.name}}{% endif %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ description or site.description }}">
    <meta name="referrer" content="no-referrer-when-downgrade">

    {# Open graph related #}
    <meta property="og:title" content="{{ title or site.title or site.name }}" />
    <meta property="og:type" content="{{ type or site.type }}" />
    <meta property="og:url" content="{{ url or site.url }}" />
    <meta property="og:image" content="{{ image or site.image }}" />
    <meta property="og:site_name" content="{{ name or site.name }}" />
    <meta property="og:description" content="{{ description or site.description }}" />

    <link rel="stylesheet" href="{% webpack 'main.css' %}">
  </head>
  <body class="flex flex-col text-white">
    <header class="p-8 bg-purple-800 text-white">
      <div class="flex items-center">
        <span class="float-left mr-2 w-16 h-16">{% icon "ninjastar" %}</span>
        <div>
          <a href="/"><h1 class="text-3xl">itspaddy.co</h1></a>
          <p>{{ site.description }}</p>
        </div>
      </div>
    </header>

    <main class="flex-auto bg-gray-800 py-6">
      {{ content | safe }}
    </main>

    <footer class="bg-purple-700 text-white p-8">
      <div class="container mx-auto ">
        <p><a href="/"><span class="float-left mr-1">{% icon "ninjastar" %}</span> itspaddy.co</a> - <time datetime="{{ build.timestamp | formatISO }}">{{ build.timestamp | format("dd LLL yyyy") }}</time></p>
      </div>
    </footer>
    </div>
    <script async defer src="{% webpack 'main.js' %}"></script>
  </body>
</html>
